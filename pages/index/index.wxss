/**index.wxss**/
.container .headerBox {
  height: 100rpx;
  border-bottom: 3rpx solid #d8d8d8;
  width: 100%;
}

.headerBox {
  display: flex;
  justify-content: space-around;
  align-items: center;
  position: fixed;
  top: 0;
  z-index: 10;
  background: white;
}

.headerBox .city .iconfont {
  color: #cacaca;
}

.tabS {
  display: flex;
  width: 50%;
  justify-content: space-around;
  height: 100%;
  align-items: center;
}

.searchIcon {
  color: red;
  font-weight: 700;
}


.tabNav {
  z-index: 4;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background: #fff;
  display: flex;
  padding: 0 30rpx;
  border-bottom: 1px solid #f5f5f5;
  box-sizing: border-box;
}

.tabNav>view {
  text-align: center;
  margin-right: 50rpx;
}

.tabNav>view:last-child {
  margin-right: 0;
}

.tabNav>view text {
  padding: 0 15rpx;
  height: 75rpx;
  display: inline-block;
}

.tabNav .cur text {
  border-bottom: 5rpx solid #36ccf9;
  color: #000;
}

.active {
  color: red;
  border-bottom: 6rpx solid red;
  height: 100%;
  display: flex;
  align-items: center;
  font-weight: 700;
}

.listItem {
  width: 100vw;
  position: relative;
  background-image: red;
  box-sizing: content-box;
  background-color: white;
  display: flex;
  border-bottom: 3rpx solid #eee;
}

.listItem .proImg {
  width: 67px;
  height: 90px;
  padding: 15px 0 0 15px;
}

.itemContent {
  background-color: #f5f5f5;
  margin-top: 100rpx;
}

.move {
  padding: 15px 10px 15px 5px;
  width: calc(100vw - 85px)
}

.start {
  font-size: 13px;
  color: #666;
  width: calc(100vw - 150px);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.moveContent {
  width: 80%;
  float: left
}

.moveType {
  color: #666;
  font-size: 13px;
  margin-top: 7px;
}

.itemName {
  margin-bottom: 7px;
  font-size: 17px;
  color: #333;
  font-weight: 700;
}

.imax image {
  width: 43px;
  height: 14px;
}

.grade {
  font-weight: 700;
  color: #faaf00;
  font-size: 15px;
}

.normal, .preSale{
  width: 47px;
  height: 27px;
  line-height: 28px;
  text-align: center;
  box-sizing: border-box;
  background-color: #f03d37;
  color: #fff;
  border-radius: 4px;
  white-space: nowrap;
  font-size: 12px;
  cursor: pointer;
  float: right
}
.button-block {
  display: flex;
  align-items: center;
  height: 100%;
}
.preSale {
  background-color: #3c9fe6;
}